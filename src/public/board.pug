mixin row(data)
    each val in data
        div(id=val.name, class=val.color, data-fee0=val.fee0, data-fee1=val.fee1, data-fee2=val.fee2, data-fee3=val.fee3, data-fee4=val.fee4, data-fee5=val.fee5)
            .property-symbol
                !=(Array.isArray(val.symbol) ? val.symbol.reduce(((sum, elem) => sum + "&#x" + elem + ";"), "") : ("&#x" + val.symbol + ";"))
            .sub
                =val.subtext

